<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_meal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".AddMealFragment">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_marginTop="54dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_btn_back"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintTop_toTopOf="@id/add_meal_layout"
        app:layout_constraintStart_toStartOf="@id/add_meal_layout"
        app:tint="@android:color/white"/>

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back">

        <!-- TextView hiển thị lời chào -->
        <TextView
            android:id="@+id/tv_name_of_meal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name of Meal"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_num_calo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="of"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_total_calo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500"
            android:textColor="@color/white"
            android:layout_marginEnd="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cal"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearch"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:hintEnabled="false"
        app:startIconDrawable="@drawable/ic_magnify_glass"
        app:boxBackgroundMode="filled"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@android:color/transparent"
        app:boxCornerRadiusTopStart="14dp"
        app:boxCornerRadiusTopEnd="14dp"
        app:boxCornerRadiusBottomStart="14dp"
        app:boxCornerRadiusBottomEnd="14dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edtSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="search foods"
        android:textColorHint="@color/gray"
        android:paddingStart="4dp"
        android:inputType="text"
        android:imeOptions="actionSearch"/>
</com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/scan_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tilSearch"
        android:background="@drawable/bg_scan_card"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Bên trái: chứa 2 TextView -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan by Image"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You send, we scan"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Bên phải: ImageButton -->
        <ImageButton
            android:id="@+id/btn_scan"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_btn_capture"
            android:padding="10dp"
            android:contentDescription="Scan"
            android:src="@drawable/ic_camera"/>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>