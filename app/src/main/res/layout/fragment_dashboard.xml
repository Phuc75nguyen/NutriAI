<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        android:paddingBottom="64dp"
        android:clipToPadding="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/dashboard_layout"
        android:padding="12dp">

        <!-- Avatar hoặc nút ảnh bên trái -->
        <ImageButton
            android:id="@+id/btn_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_btn_back"
            android:contentDescription="Avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <!-- TextView hiển thị lời chào -->
        <TextView
            android:id="@+id/tv_greeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hi UserName"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <!-- Nút cài đặt -->
        <ImageButton
            android:id="@+id/btn_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_btn_back"
            android:contentDescription="Setting"
            android:src="@drawable/ic_setting"
            app:tint="@color/white" />

        <!-- Nút thông báo -->
        <ImageButton
            android:id="@+id/btn_notifications"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_btn_back"
            android:contentDescription="Notification"
            android:src="@drawable/ic_notification" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calendar_container"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_calendar_container"
        android:padding="8dp"
        android:layout_marginTop="44dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDateList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:overScrollMode="never" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calories_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@id/dashboard_layout"
        app:layout_constraintTop_toBottomOf="@id/calendar_container">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:text="Count Your Daily Calories"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:layout_margin="1dp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/lavender">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#121212"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!-- Gauge nửa vòng tròn -->
                <me.bastanfar.semicirclearcprogressbar.SemiCircleArcProgressBar
                    android:id="@+id/gaugeView"
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    app:percent="65"
                    app:progressBarColor="#111111"
                    app:progressPlaceHolderColor="#C9B6E8"
                    app:progressBarWidth="40"
                    app:progressPlaceHolderWidth="40"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- số 0 và 100 hai đầu thước -->
                <TextView
                    android:id="@+id/tvMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    app:layout_constraintTop_toBottomOf="@id/gaugeView"
                    app:layout_constraintStart_toStartOf="@id/gaugeView"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/tvMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    app:layout_constraintTop_toBottomOf="@id/gaugeView"
                    app:layout_constraintEnd_toEndOf="@id/gaugeView"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"/>

                <!-- số lớn + nhãn “Left” ở giữa -->
                <LinearLayout
                    android:id="@+id/centerBox"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="@id/gaugeView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/gaugeView"
                    app:layout_constraintEnd_toEndOf="@id/gaugeView">

                    <TextView
                        android:id="@+id/tvValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1672"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        />

                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Left"
                        android:textSize="18sp"
                        android:textColor="#444444"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/calories_trend_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/dashboard_layout"
        app:layout_constraintTop_toBottomOf="@id/calories_container">

    <TextView
        android:id="@+id/calories_trend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"
        android:text="Calories Trends"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            app:cardBackgroundColor="@color/lavender"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/calorieChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="@android:color/transparent"/>
    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>